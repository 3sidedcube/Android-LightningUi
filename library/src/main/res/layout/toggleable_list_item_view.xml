<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:orientation="vertical"
	android:paddingLeft="16dp"
	android:paddingRight="16dp"
	android:paddingTop="16dp"
	android:paddingBottom="20dp"
	android:descendantFocusability="blocksDescendants"
>
	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
	>
		<com.cube.storm.ui.view.ImageView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/expand_icon"
			android:src="@drawable/ic_expand"
			android:layout_centerVertical="true"
			android:layout_alignParentRight="true"
			android:layout_marginLeft="8dp"
		/>

		<com.cube.storm.ui.view.TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:id="@+id/title"
			android:singleLine="false"
			android:textColor="#dd000000"
			android:textSize="16sp"
			android:fontFamily="sans-serif-regular"
			android:layout_toLeftOf="@id/expand_icon"
		/>
	</RelativeLayout>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:id="@+id/toggle_container"
		android:orientation="vertical"
		android:paddingTop="8dp"
		android:visibility="gone"
	>
		<com.cube.storm.ui.view.TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:id="@+id/description"
			android:textColor="@color/description_text"
			android:textSize="14sp"
			android:fontFamily="sans-serif-regular"
			android:focusable="true"
			android:focusableInTouchMode="true"
		/>
	</LinearLayout>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:id="@+id/embedded_links_container"
		android:orientation="vertical"
		android:layout_marginTop="8dp"
		android:visibility="gone"
	/>
</LinearLayout>
